{% extends 'base.html.twig' %}

{% block title %}Seasons index{% endblock %}

{% block body %}
    <h1>Seasons index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Year</th>
                <th>NumbersEpisode</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.numbersOfEpisode }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a href="{{ path('app_seasons_show', {'id': season.id}) }}">show</a>
                    <a href="{{ path('app_seasons_edit', {'id': season.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_seasons_new') }}">Create new</a>
{% endblock %}
